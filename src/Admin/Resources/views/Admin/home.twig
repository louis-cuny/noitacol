{% extends 'layout.twig' %}

{% block body %}
    <br>
    <div class="container">
        <table class="table table-bordered">
            <caption>{{ data | length }} rows</caption>
            <thead>
            <tr>
                {% for key, value in data.0 %}
                    <th scope="col">{{ key }}</th>
                {% endfor %}
            </tr>
            </thead>
            <tbody>
            {% for key, row in data %}
                <tr>
                    {% for cell in row %}
                        <td>{{ cell }}</td>
                    {% endfor %}
                </tr>
            {% endfor %}

            </tbody>
        </table>

    </div>
{% endblock %}
